    <script>
        function gerarPrescricao() {
            const tipo = document.getElementById('tipoCabelo').value;
            const deficiencia = document.getElementById('deficiencia').value;
            const condicao = document.getElementById('condicao').value;
            const nome = document.getElementById('nomeCliente').value;

            if (!tipo || !deficiencia) {
                alert("Por favor, selecione o tipo de cabelo e a deficiência.");
                return;
            }

            // Mock de dados e lógica
            let produtos = [];
            let procedimento = "";
            let saudeInfo = "";

            // Lógica de Deficiência
            switch (deficiencia) {
                case 'quebra':
                    produtos = ["Shampoo Rivan Reconstruction", "Máscara de Aminoácidos Rivan", "Leave-in com Proteção Térmica Rivan"];
                    procedimento = "<strong>Protocolo de Rígidez e Força:</strong> Terapia de reconstrução profunda com laser frio para fixação de queratina.";
                    break;
                case 'ressecamento':
                    produtos = ["Shampoo Rivan Nutritive", "Máscara Oil Therapy Rivan", "Sérum de Finalização Rivan"];
                    procedimento = "<strong>Nutrição Lipídica:</strong> Umectação a quente com óleos essenciais e ozonioterapia.";
                    break;
                case 'queda':
                    produtos = ["Shampoo Rivan Detox (Couro)", "Tônico de Crescimento Rivan", "Máscara Equilíbrio Rivan"];
                    procedimento = "<strong>Terapia Capilar Detox:</strong> Argiloterapia + Microagulhamento capilar para estímulo do folículo.";
                    break;
                case 'opacidade':
                    produtos = ["Linha Rivan Glow (Brilho Intenso)", "Vinagre de Maçã Capilar Rivan", "Finalizador de Brilho"];
                    procedimento = "<strong>Banho de Verniz Orgânico:</strong> Selagem de cutículas para reflexão máxima da luz.";
                    break;
            }

            // Lógica de Condição Especial
            if (condicao === 'hormonal') {
                saudeInfo = "Alterações hormonais podem causar afinamento. Recomenda-se acompanhamento nutricional e uso da linha Rivan Densificadora. Evitar tração excessiva.";
            } else if (condicao === 'diabetico') {
                saudeInfo = "Atenção: Couro cabeludo sensível e cicatrização lenta. Usar apenas produtos pH neutro Rivan. Evitar água muito quente no Espaço Vanessa Braga.";
            } else if (condicao === 'gravida') {
                saudeInfo = "Fase de Gestação/Lactação: Prescrição livre de parabenos e substâncias proibidas. Foco em hidratação e controle de oleosidade natural.";
            } else if (condicao === 'estresse') {
                saudeInfo = "Eflúvio Telógeno detectado. Foco em relaxamento no lavatório com óleos essenciais e Tônico Fortalecedor Rivan.";
            }

            // Update UI
            document.getElementById('printNome').innerText = "Cliente: " + (nome || "Consulente");
            document.getElementById('dataAtual').innerText = new Date().toLocaleDateString();
            
            const lista = document.getElementById('listaProdutos');
            lista.innerHTML = "";
            produtos.forEach(p => {
                lista.innerHTML += `<li class="flex items-center gap-2"><svg class="h-4 w-4 text-green-500" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg> ${p}</li>`;
            });

            document.getElementById('procedimentoIndicado').innerHTML = procedimento;

            if (saudeInfo) {
                document.getElementById('alertaSaude').classList.remove('hidden');
                document.getElementById('textoSaude').innerText = saudeInfo;
            } else {
                document.getElementById('alertaSaude').classList.add('hidden');
            }

            document.getElementById('prescricaoContainer').classList.remove('hidden');
            document.getElementById('prescricaoContainer').scrollIntoView({ behavior: 'smooth' });
        }
    </script>
</body>
